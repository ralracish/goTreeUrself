<div class="hero-full-screen overlay">
  <div class="top-content-section">
    {{> nav/nav-block user=false register=true}}

<div class="left-profile">

  <img class="thumbnail" src="https://placehold.it/300x250">
  <div class="myinfo" id="profile-info">
      <label for="exampleFileUpload" class="button" id="profile-button">Upload Your Profile Pic</label>
      <input type="file" id="exampleFileUpload" class="show-for-sr">
        <h5>{{userInfo.firstName}} {{userInfo.lastName}}</h5>
    <p>I am an environmental enthusiast and peach tree lover!</p>
    <p>{{userInfo.city}}, {{userInfo.state}}, {{userInfo.country}}</p>
</div>
</div>
<div class="profile-center" align="center" id="profiletxt">
  <p>Upload the picture of your tree</p>
  <button id="upload-tree" data-id="{{userInfo.id}}" class="btn btn-primary">Upload Your Tree Pic!</button>
  <div id='response' data-id="{{userInfo.id}}"></div>
  <div id='content' data-id="{{userInfo.id}}"></div>
  <div id="map"></div>
</div>
<div class="right-profiletxt">
  <header align="center" class="header-wrap">
    <h1>Welcome, {{userInfo.firstName}}</h1>
    <div class="userId">
      <h3>View or update your user info</h3>
      <h5 id="user-number" data-useremail="{{userInfo.email}}">Account email: {{userInfo.email}}</h5>
    </div>
    <h3 id="update-err-msg"></h3>
  </header>
  <form id="user-form">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputFirst" class="profiletxt">First Name</label>
        <input type="text" class="form-control" id="inputFirst" value="{{userInfo.firstName}}" placeholder="John">
      </div>
      <div class="form-group col-md-6">
        <label for="inputLast" class="profiletxt">Last Name</label>
        <input type="text" class="form-control" id="inputLast" value="{{userInfo.lastName}}" placeholder="Doe">
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputPassword" class="profiletxt">Email</label>
        <input type="text" class="form-control" id="inputEmail" value="{{userInfo.email}}">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword" class="profiletxt">Password</label>
        <input type="password" class="form-control" id="inputPassword" value="{{userInfo.password}}">
      </div>
    </div>

    <div>
      <button type="submit" id="update-user" data-id="{{userInfo.id}}" class="btn btn-primary">Update</button>
      {{#unless userInfo.isAdmin}}
        <button type="submit" id="delete-user" class="btn btn-primary">Delete</button>
      {{/unless}}
      <button type="submit" id="view-user" data-id="{{userInfo.id}}" class="btn btn-primary">Refresh</button>
    </div>
  </form>

  <div class="modal" id="delete-user-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Re-Enter Credentials to delete user</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <h3 id="err-msg"></h3>
          <form>
            <div class="form-group">
              <label for="userEmail">Email:</label>
              <input type="text" class="form-control" id="userEmail">
            </div>
            <div class="form-group">
              <label for="userPassword">Password:</label>
              <input type="password" class="form-control" id="userPassword">
            </div>
          </form>
        </div>

        <div class="modal-footer">
          <button id="confirm-delete" type="button" data-id="{{userInfo.id}}" class="btn btn-primary">Confirm Delete</button>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Nah I'll stay</button>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
