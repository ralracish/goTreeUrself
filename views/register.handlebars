<div class="hero-full-screen overlay">
  <div class="top-content-section">
    {{> nav/nav-block user=false register=true}}
    {{!-- For XY grid row becomes grid-x and columns become cells --}}
  </div>
    <div class="translucent-form-overlay-registration" style="margin: 0 auto;">
      <form>
        <div class="form-icons">
          <h3>Create Your Account</h3>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-user"></i>
              </span>
              <input type="text" class="form-control input-group-field" id="inputFirst" placeholder="First Name">
            </div>
          </div>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-user"></i>
              </span>
              <input type="text" class="form-control input-group-field" id="inputLast" placeholder="Last Name">
            </div>
          </div>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-building"></i>
              </span>
              <input type="text" class="form-control" id="inputCity" placeholder="City">
            </div>
          </div>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-tree"></i>
              </span>
              <input type="text" class="form-control" id="inputState" placeholder="State">
            </div>
          </div>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-globe"></i>
              </span>
              <input type="text" class="form-control" id="inputCountry" placeholder="Country">
            </div>
          </div>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-envelope"></i>
              </span>
              <input type="email" class="form-control" id="inputEmail" placeholder="Email">
            </div>
          </div>
          <div class="row columns form-pad">
            <div class="input-group">
              <span class="input-group-label">
                <i class="fa fa-key"></i>
              </span>
              <input type="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
          </div>
          <button type="button" id="add-user" class="button success hollow expanded search-button">
            Submit
          </button>
        </div>
      </form>
    </div>
  <div class="bottom-content-section" data-magellan data-threshold="0">
  </div>
</div>

{{> modal/login-block}}